  border-radius: 20rpx;
  padding: 40rpx;
  background: #FFFFFF;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.container .container2 {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
}
.container .container2 image {
      width: 150rpx;
      height: 200rpx;
}
.container .container2 .container3 {
      margin-left: 30rpx;
