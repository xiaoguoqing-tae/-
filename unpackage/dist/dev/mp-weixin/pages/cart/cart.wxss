.cart_pay {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 110rpx;
  background: #FFFFFF;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
