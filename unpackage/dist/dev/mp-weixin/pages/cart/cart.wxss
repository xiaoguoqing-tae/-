}
.cart_pay .right {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
}
.cart_pay .right .total {
      color: #ff0000;
      line-height: 140rpx;
      margin-right: 20rpx;
}
.cart_pay .right button {
      background: #DD524D;
